<wxs module="filters" src="../../utils/filters.wxs"></wxs>
<view class="container">
    <view class="select-area">
        <view class="time-select-area">
            <picker mode="date"
                    value="{{startTime}}"
                    bindchange="bindStartDateChange">
                <view class="picker">
                    <view class="start-time">{{ startTime }}</view>
                </view>
            </picker>
            至
            <picker mode="date"
                    value="{{endTime}}"
                    bindchange="bindEndDateChange">
                <view class="picker">
                    <view class="end-time">{{ endTime }}</view>
                </view>
            </picker>
        </view>
        <view class="category-select-area">
            <!--<text>类别筛选</text>-->
        </view>
    </view>
    <view class="cost-list">
        <view
                class="cost-card"
                wx:for="{{costList}}"
                wx:for-item="item"
                wx:key="id">
            <view class="line">
                <text>
                    <text class="title">日期：</text>{{ filters.formatTime(item.pay_date) }}
                </text>
                <text>
                    <text class="title">类别：</text>{{ item.category }}
                </text>
                <text>
                    <text class="title">金额：</text>{{ item.cost }}
                </text>
            </view>
            <view class="line">
                <text>
                    <text class="title">备注：</text>{{ item.remark }}</text>
            </view>
        </view>
    </view>
</view>

<view class="container">
    <view class="select-area">
        <view class="time-select-area">
            <picker mode="date"
                    value="{{startTime}}"
                    bindchange="bindStartDateChange">
                <view class="picker">
                    <view class="start-time">{{ startTime }}</view>
                </view>
            </picker>
            至
            <picker mode="date"
                    value="{{endTime}}"
                    bindchange="bindEndDateChange">
                <view class="picker">
                    <view class="end-time">{{ endTime }}</view>
                </view>
            </picker>
        </view>
        <view class="sub-area">
            <text>合计：{{ sum }} 元</text>
        </view>
    </view>
    <view class="cost-list">
        <view
                class="cost-card"
                wx:for="{{costList}}"
                wx:for-item="item"
                wx:key="id">
            <mp-slideView buttons="{{slideButtons}}" bindbuttontap="slideButtonTap">
                <view class="line">
                    <text>
                        <text class="title">日期：</text>{{ item.pay_date }}
                    </text>
                    <text>
                        <text class="title">类别：</text>{{ item.category }}
                    </text>
                    <text>
                        <text class="title">金额：</text>{{ item.cost }}
                    </text>
                </view>
                <view class="line">
                    <text>
                        <text class="title">备注：</text>{{ item.remark }}</text>
                </view>
            </mp-slideView>
        </view>
    </view>
    <mp-dialog title="确定删除这条记录吗？"
               show="{{dialogShow}}"
               bindbuttontap="tapDialogButton"
               buttons="{{buttons}}">
        <view>记录删除不可恢复！</view>
    </mp-dialog>
</view>

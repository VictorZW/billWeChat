.user-info {
  padding: 40rpx;
  display: flex;
  box-sizing: border-box;
  background-color: #5D93FC;
}

.user-info .user-avatar {
  margin-right: 50rpx;
  font-size: 0;
}

.user-info .user-avatar .userInfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-info .user-info-msg {
  display: flex;
  align-items: center;
}

.user-info .user-info-msg .user-name {
  color: #FFFFFF;
  font-size: 36rpx;
}

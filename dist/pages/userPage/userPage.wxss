.user-info {
  padding: 40rpx;
  display: flex;
  box-sizing: border-box;
  background-color: #5D93FC;
}

.user-info .user-avatar {
  margin-right: 50rpx;
  font-size: 0;
}

.user-info .user-avatar .userInfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-info .user-info-msg {
  display: flex;
  align-items: center;
}

.user-info .user-info-msg .user-name {
  color: #FFFFFF;
  font-size: 36rpx;
}

.sign-out {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 100rpx 0;
}

.sign-out .login-btn {
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  min-height: auto;
  padding: 0;
  background-color: #4083FF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.tip {
  text-align: center;
  margin-top: 100rpx;
}

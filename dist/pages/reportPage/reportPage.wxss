.container {
  padding-top: 80rpx;
}

.charts-area {
  padding-top: 120rpx;
}

.charts-area .canvas-content {
  width: 100%;
  height: 500rpx;
}

.cost-list {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.cost-list .line {
  width: 50%;
  padding-bottom: 20rpx;
  display: flex;
}

.cost-list .line .title, .cost-list .line .cost {
  font-size: 28rpx;
}

.cost-list .line .title {
  padding-right: 10rpx;
}

.sub-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  display: flex;
  background-color: #5D93FC;
}

.sub-area text {
  color: #FFFFFF;
}

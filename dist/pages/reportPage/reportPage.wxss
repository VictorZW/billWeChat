.select-area {
  width: 100%;
  height: 80rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
}

.select-area .time-select-area {
  font-size: 30rpx;
  color: #999999;
  display: flex;
}

.select-area .time-select-area .start-time {
  color: #5383F6;
  padding-right: 20rpx;
}

.select-area .time-select-area .end-time {
  color: #5383F6;
  padding-left: 20rpx;
  min-width: 200rpx;
  text-align: center;
}

.select-area .sub-area {
  font-size: 30rpx;
  display: flex;
}

.select-area .sub-area text {
  color: #5383F6;
}

.charts-area {
  padding-top: 120rpx;
}

.charts-area .canvas-content {
  width: 100%;
  height: 500rpx;
}

<view class="container">
    <view class="select-area">
        <view class="time-select-area">
            <picker mode="date"
                    value="{{startTime}}"
                    bindchange="bindStartDateChange">
                <view class="picker">
                    <view class="start-time">{{ startTime }}</view>
                </view>
            </picker>
            至
            <picker mode="date"
                    value="{{endTime}}"
                    bindchange="bindEndDateChange">
                <view class="picker">
                    <view class="end-time">{{ endTime }}</view>
                </view>
            </picker>
        </view>
        <view class="sub-area">
            <text>合计：{{ sum }} 元</text>
        </view>
    </view>
    <view class="charts-area">
        <view class="canvas-content">
            <ec-canvas id="mychart-dom-bar"
                       canvas-id="mychart-bar"
                       ec="{{ ec }}"
            ></ec-canvas>
        </view>
    </view>
    <view class="cost-list">
        <view class="line"
              wx:key="index"
              wx:for="{{costList}}"
              wx:for-item="item">
            <view class="title">{{ item.name }}:</view>
            <view class="cost">{{ item.value }} 元</view>
        </view>
    </view>
</view>

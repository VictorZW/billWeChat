<view class="container">
    <view class="select-area">
        <view class="time-select-area">
            <picker mode="date"
                    value="{{startTime}}"
                    bindchange="bindStartDateChange">
                <view class="picker">
                    <view class="start-time">
                        {{ startTime }}
                        <image class="up-icon"
                               src="../../images/up.png"></image>
                    </view>
                </view>
            </picker>
            <view class="s-text">至</view>
            <picker mode="date"
                    value="{{endTime}}"
                    bindchange="bindEndDateChange">
                <view class="picker">
                    <view class="end-time">
                        {{ endTime }}
                        <image class="up-icon"
                               src="../../images/up.png"></image>
                    </view>
                </view>
            </picker>
        </view>
        <view class="choose-cat-area">
            <text>类别</text>
            <image class="choose-cat"
                   src="../../images/filter.png"
            ></image>
        </view>
    </view>
    <view class="cost-list">
        <view
                class="cost-card"
                wx:for="{{costList}}"
                wx:for-item="item"
                wx:key="id">
            <mp-slideView
                    data-choosed="{{item}}"
                    buttons="{{slideButtons}}"
                    bindbuttontap="slideButtonTap">
                <view class="line">
                    <text>
                        <text class="title">日期：</text>{{ item.pay_date }}
                    </text>
                    <text>
                        <text class="title">类别：</text>{{ item.category }}
                    </text>
                    <text>
                        <text class="title">金额：</text>{{ item.cost }}
                    </text>
                </view>
                <view class="line">
                    <text>
                        <text class="title">备注：</text>{{ item.remark }}</text>
                </view>
            </mp-slideView>
        </view>
    </view>
    <view class="sub-area">
        <text>合计：{{ sum }} 元</text>
    </view>
    <mp-dialog title="确定删除这条记录吗？"
               show="{{dialogShow}}"
               bindbuttontap="tapDialogButton"
               buttons="{{buttons}}">
        <view>记录删除不可恢复！</view>
    </mp-dialog>
</view>

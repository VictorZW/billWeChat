.container {
  padding-top: 80rpx;
}

.cost-list {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.cost-list .cost-card {
  width: 100%;
  background: #FFFFFF;
  border-top: 2rpx solid #E6E6E6;
  box-sizing: border-box;
}

.cost-list .cost-card .line {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx 20rpx;
}

.cost-list .cost-card .line .title {
  color: #333333;
}

.cost-list .cost-card .line text {
  font-size: 30rpx;
}

.sub-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  display: flex;
  background-color: #5D93FC;
}

.sub-area text {
  color: #FFFFFF;
}
